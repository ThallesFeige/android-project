<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="111dp"
            android:layout_height="77dp" app:srcCompat="@drawable/amazon"
            android:id="@+id/rbAmazon" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="140dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="60dp"/>
    <TextView
            android:text="Aplicativos"
            android:layout_width="169dp"
            android:layout_height="51dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rbCarrefour"/>
    <TextView
            android:text="Amazon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/rbAmazon" android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="85dp"/>
    <ImageView
            android:layout_width="111dp"
            android:layout_height="77dp" app:srcCompat="@drawable/carrefour"
            android:id="@+id/rbCarrefour" android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rbAmazon"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"/>
    <TextView
            android:text="Carrefour"
            android:layout_width="68dp"
            android:layout_height="20dp"
            android:id="@+id/txtCarrefour"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/rbCarrefour"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>
    <ImageView
            android:layout_width="111dp"
            android:layout_height="77dp" app:srcCompat="@drawable/download"
            android:id="@+id/rbMercadolivre"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:layout_marginTop="44dp"/>
    <TextView
            android:text="Mercado Livre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMercadoLivre"
            app:layout_constraintTop_toBottomOf="@+id/rbMercadolivre" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" android:layout_marginTop="10dp"/>
    <ImageView
            android:layout_width="111dp"
            android:layout_height="77dp" app:srcCompat="@drawable/images"
            android:id="@+id/rbAliexpress"
            app:layout_constraintTop_toBottomOf="@+id/txtMercadoLivre" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Aliexpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAli" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/rbAliexpress" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="20dp"/>
    <ImageView
            android:layout_width="111dp"
            android:layout_height="77dp" app:srcCompat="@drawable/lulu"
            android:id="@+id/rbMagalu"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="88dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/txtCarrefour"/>
    <TextView
            android:text="Magazine Luiza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMagalu" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/rbMagalu" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtAli"
            android:layout_marginEnd="95dp" app:layout_constraintHorizontal_bias="0.935"/>
    <Button
            android:text="Resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAli"/>
</androidx.constraintlayout.widget.ConstraintLayout>

